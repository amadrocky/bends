{% extends 'layout.html.twig' %}

{% block title %}Offers index{% endblock %}

{% block body %}

    <div class="homeSection">
        <div class="row justify-content-center p-3 w-100 m-0">
            <div class="loginBlock h-100 p-2">
                <h2 class="loginTitle mb-5 text-center">Annonces</h2>
                <div class="row justify-content-center filtersZone p-3 w-100 m-0">
                    <div class="col">
                        <a href="{{ path('offers_new') }}" class="btn btn-primary btn-block"><i class="far fa-plus-square"></i> DÃ©poser
                            une annonce</a>
                    </div>
                    <div class="col">
                        <input type="search" class="form-control" placeholder="Rechercher">
                    </div>
                    <div class="col">
                        <select name="categories" id="categories" class="form-control">
                            <option value="null">Localisation</option>
                        </select>
                    </div>
                    <div class="col-1">
                        <button class="btn btn-primary btn-block"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="row p-3 w-100 m-0">
                    {% for offer in offers %}
                        <div class="col-12  m-1 p-3">
                            <a href="{{ path('offers_show', {'id': offer.id}) }}">
                                <div class="card flex-row flex-wrap">
                                    <div class="card-header border-0">
                                        <img src="//placehold.it/200" alt="">
                                    </div>
                                    <div class="card-block p-2">
                                        <h4 class="card-title">{{ offer.title }}</h4>
                                        <p class="card-text">{{ offer.category }}</p>
                                        <p class="card-text">{{ offer.description }}</p>
                                        <p class="card-text">{{ offer.createdAt|date('d-m-Y, H:i') }}</p>
                                    </div>
                                    <div class="w-100"></div>
                                </div>
                            </a>
                        </div>
                    {% else %}
                        <tr>
                            <td colspan="11">Aucune annonce disponible.</td>
                        </tr>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
