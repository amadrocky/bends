{% extends 'layout.html.twig' %}

{% block title %}Consulter les annonces{% endblock %}

{% block body %}
    <div class="homeSection">
        <div class="row justify-content-center p-3 w-100 m-0">
            <div class="col col-md-4 col-lg-10 loginBlock h-100 p-2">
                <h2 class="loginTitle mb-5 text-center">Annonces</h2>
                <div class="row justify-content-center filtersZone p-3 w-100 m-0 d-block d-md-flex">
                    <div class="col-md-1">
                        <a href="{{ path('offers_new') }}" class="btn btn-primary btn-block"
                           style="box-shadow: -1px 5px 5px -4px black;"><i
                                    class="fas fa-plus-circle"></i></a>
                    </div>
                    <div class="col my-1">
                        <input type="search" class="form-control" placeholder="Rechercher">
                    </div>
                    <div class="col my-1">
                        <select name="categories" id="categories" class="form-control">
                            <option value="allCat" selected>Catégories</option>
                            {% for categorie in categories %}
                                <option value="{{ categorie.id }}">{{ categorie.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col my-1">
                        <select name="categories" id="categories" class="form-control">
                            <option value="allReg" selected>Régions</option>
                            {% for region in regions %}
                                <option value="{{ region.code }}">{{ region.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-primary btn-block" style="box-shadow: -1px 5px 5px -4px black;"><i
                                    class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="row p-3 w-100 m-0">
                    {% for offer in offers %}
                        <div class="col-12  m-1">
                            <a href="{{ path('offers_show', {'id': offer.id}) }}" class="offer-link">
                                <div class="card offer-card flex-md-row flex-sm-wrap">
                                    <div class="card-header border-0">
                                        {% if offer.pictures is not empty %}
                                            <img src="{{ asset('build/images/offers/') }}{{ offer.pictures[0] }}"
                                                 style="max-height: 150px; max-width: 150px"
                                                 class="d-block mx-auto"
                                                 alt="photo">
                                        {% else %}
                                            <img src="{{ asset('build/images/picture-no-image.jpg') }}"
                                                 style="max-height: 150px"
                                                 class="d-block mx-auto"
                                                 alt="photo">
                                        {% endif %}
                                    </div>
                                    <div class="card-block p-2">
                                        <div class="row">
                                            <div class="col">
                                                <h3 class="card-title mb-4">{{ offer.title }}</h3>
                                            </div>
                                        </div>
                                        <p class="card-text text-dark mb-2"><b>{{ offer.category.name }}</p></b>
                                        <p class="card-text text-dark m-0">{{ offer.city }}</p>
                                        <small class="text-muted m-0">{{ offer.createdAt|date('d-m-Y, H:i') }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="alert alert-primary">
                                Aucune annonce disponible. Déposez la votre <a href="{{ path('offers_new') }}">ici</a>.
                            </p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
