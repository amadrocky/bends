<div class="col-12 m-1">
	<a href="{{ path('offers_show', {'id': offer.id}) }}" class="offer-link">
		<div class="card offer-card flex-row">
			<div class="card-header card-image bg-dark border-0 p-0">
				{% if offer.pictures is not empty %}
					<img src="{{ asset('build/images/offers/') }}{{ offer.pictures[0] }}" alt="photo">
					<span class="photo-indicator p-2 rounded-circle">
						<i class="fas fa-camera"></i>
						{{ offer.pictures|length }}</span>
				{% else %}
					<img src="{{ asset('build/images/picture-no-image.jpg') }}" alt="photo">
				{% endif %}
			</div>
			<div class="card-block p-2">
				<div class="row">
					<div class="col">
						<h4 class="card-title">{{ offer.title }}</h4>
					</div>
				</div>
				{% if offer.type.id == 2 %}
					<span class="card-badge badge-pill badge-warning text-white" style="font-size: 12px">
						<b>Demande</b>
					</span>
				{% endif %}
				{% if offer.isPro == 2 %}
					<span class="card-badge badge-pill badge-primary text-white" style="font-size: 12px">
						<b>Pro</b>
					</span>
				{% endif %}
				<p class="card-text text-dark mb-2">
					<b>{{ offer.category.name }}</p>
				</p>
			</b>
			<p class="card-text text-dark m-0">{{ offer.city }}</p>
			{% if offer.createdAt|date('d-m-Y') == today|date('d-m-Y') %}
				<small class="text-muted m-0">
					Aujourd'hui,
					{{ offer.createdAt|date('H:i') }}
				</small>
			{% elseif offer.createdAt|date('d-m-Y') == yesterday|date('d-m-Y') %}
				<small class="text-muted m-0">
					Hier,
					{{ offer.createdAt|date('H:i') }}
				</small>
			{% else %}
				<small class="text-muted m-0">
					{{ offer.createdAt|date('d-m-Y, H:i') }}
				</small>
			{% endif %}
		</div>
	</div>
</a></div>
