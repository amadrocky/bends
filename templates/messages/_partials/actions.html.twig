<script>
	function maskAsRead() {
		document.getElementById("read").setAttribute("checked", "checked");
		document.getElementById("unread").removeAttribute("checked");
	}
	function maskAsUnRead() {
		document.getElementById("unread").setAttribute("checked", "checked");
		document.getElementById("read").removeAttribute("checked");
	}
</script>
