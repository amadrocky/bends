{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="homeSection">
        <div class="row justify-content-center p-3 w-100 m-0">
            <div class="col col-md-4 offset-md-4 loginBlock m-2 p-3 form-style">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h2 class="loginTitle mb-3 text-center">Connexion</h2>
                    <label for="inputEmail" class="d-none">Adresse email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-2"
                           required
                           placeholder="Adresse email"
                           autofocus>
                    <label for="inputPassword" class="d-none">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           required
                           placeholder="Mot de passe">

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-primary btn-block mt-3" type="submit">
                        Se connecter
                    </button>
                    <a href="{{ path('app_register') }}" class="btn btn-success btn-block mt-3">
                        Cr√©er un compte
                    </a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
