	<script type="text/javascript">
		function scro(id) {
document.getElementById(id).scrollIntoView({behavior: 'smooth'});
}

document.getElementById("landingContactForm").addEventListener('submit', onSubmit);

function onSubmit(event) {
event.preventDefault();

let landingContactForm = new FormData(this);
let formName = document.getElementById("landingContactName");
let formEmail = document.getElementById("landingContactEmail");
let formMessage = document.getElementById("landingContactMessage");

$.ajax({
url: "{{ path('land') }}",
type: 'POST',
data: landingContactForm,
cache: false,
contentType: false,
processData: false,
beforeSend: function () {
document.getElementById("loader").classList.remove('d-none');
},
success: function () {
document.getElementById("loader").classList.add('d-none');
formName.value = '';
formEmail.value = '';
formMessage.value = '';
swal({title: "Message envoyé", text: "Votre message a bien été transmis à nos équipes.", icon: "success"});
},
error: function () {
alert('error');
}
})
}

function closeNav() {
document.getElementById("landing-nav-btn").click();
}

function acceptCookie() {
$.ajax({
url: "{{ path('accept_cookie') }}",
type: 'POST',
success: function () {
document.getElementById('cookie').classList.add('d-none');
},
error: function () {
alert('error')
}
})
}
	</script>
